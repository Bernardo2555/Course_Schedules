    <h2><%= pluralize(student.errors.count, "error") %> prohibited this student from being saved:</h2>

    <ul>
      <% student.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with(model: [:admins_backoffice, @student], local: true, class: "form-horizontal form-label-left") do |form| %>

  <div class="form-group">
    <%= form.label :ar, class: "control-label col-md-3 col-sm-3 col-xs-12" %>
    <div class="col-md-6 col-sm-6 col-xs-12">
      <%= form.text_field :ar, class: "form-control col-md-7 col-xs-12"%>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :description, class: "control-label col-md-3 col-sm-3 col-xs-12" %>
    <div class="col-md-6 col-sm-6 col-xs-12">
      <%= form.text_field :description, class: "form-control col-md-7 col-xs-12"%>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :year, class: "control-label col-md-3 col-sm-3 col-xs-12" %>
    <div class="col-md-6 col-sm-6 col-xs-12">
      <%= form.number_field :year, class: "form-control col-md-7 col-xs-12"%>
    </div>
  </div>

  <div class="ln_solid"></div>
  <div class="form-group">
    <div class="col-md-6 col-sm-6 offset-md-3">
      <button type="submit" class="btn btn-success">Submit</button>
    </div>
  </div>
<% end %>
