<%= form_with(model: [:admins_backoffice, @schedule], local: true) do |form| %>
  <% if schedule.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(schedule.errors.count, "error") %> prohibited this schedule from being saved:</h2>

      <ul>
        <% schedule.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :user_id %>
    <%= form.select :user_id, @user_options, include_blank: true %>
  </div>

  <div class="field">
    <%= form.label :course_id %>
    <%= form.select :course_id, @course_options, include_blank: true %>
  </div>

  <div class="field">
    <%= form.label :students %>
    <%= form.select :students, @student_options, {}, {multiple: true}%>
  </div>

  <div class="field">
    <%= form.label :weekday %>
    <%= form.select :weekday, ['Segunda-feira', 'Terça-feira', 'Quarta-feira', 'Quinta-feira', 'Sexta-feira', 'Sábado', 'Domingo'], include_blank: true %>
  </div>
<!--  colocar como selection box com os dias da semana-->

  <div class="field">
    <%= form.label :group %>
    <%= form.text_field :group %>
  </div>
<!--  colocar como selection button-->

  <div class="field">
    <%= form.label :time %>
    <%= form.select :time, ['07:30', '08:20', '09:10', '10:10', '11:00', '13:20', '14:10', '15:00', '16:00', '16:50', '17:40', '18:50', '19:40', '20:30', '21:30', '22:30'], include_blank: true %>
  </div>

  <div class="field">
    <%= form.label :time_end %>
    <%= form.select :time_end, ['07:30', '08:20', '09:10', '10:10', '11:00', '13:20', '14:10', '15:00', '16:00', '16:50', '17:40', '18:50', '19:40', '20:30', '21:30', '22:30'], include_blank: true %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
