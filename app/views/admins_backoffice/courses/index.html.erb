<h1>Matérias</h1><br><br>

<%= link_to new_admins_backoffice_course_path do %>
  <i class="fa fa-plus"></i> Novo
<% end %>

<div class="x_content">
  <table class="table table-striped">
    <thead>
    <tr>
      <th><%= @courses.human_attribute_name(:code_c) %></th>
      <th><%= @courses.human_attribute_name(:description) %></th>
      <th><%= @courses.human_attribute_name(:ideal_year) %></th>
      <th colspan="3"></th>
    </tr>
    </thead>

    <tbody>
    <% @courses.each do |course| %>
      <tr scope="row">
        <td><%= course.code_c %></td>
        <td><%= course.description %></td>
        <td><%= course.ideal_year %></td>
        <td>
          <%= link_to edit_admins_backoffice_course_path(course) do %>
            <i class="fa fa-pencil"></i>
          <% end %>
        </td>
        <td>
          <%= link_to admins_backoffice_course_path(course), method: :delete, data: {confirm: 'Você tem certeza?'} do %>
            <i class="fa fa-minus"></i>
          <% end %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
