<h1>Professores</h1><br><br>

<%= link_to new_admins_backoffice_user_path do %>
  <i class="fa fa-plus"></i> Novo
<% end %>

<div class="x_content">
  <table class="table table-striped">
  <thead>
  <tr>
    <th><%= @users.human_attribute_name(:ar) %></th>
    <th><%= @users.human_attribute_name(:description) %></th>
    <th><%= @users.human_attribute_name(:email) %></th>
    <th><%= @users.human_attribute_name(:telephone) %></th>
    <th colspan="3"></th>
  </tr>
  </thead>
  <tbody>
  <% @users.each do |user| %>
    <tr scope="row">
      <td><%= user.ar %></td>
      <td><%= user.description %></td>
      <td><%= user.email %></td>
      <td><%= user.telephone %></td>
      <td>
        <%= link_to edit_admins_backoffice_user_path(user) do %>
          <i class="fa fa-pencil"></i>
        <% end %>
      </td>
      <td>
        <%= link_to admins_backoffice_user_path(user), method: :delete, data: {confirm: 'VocÃª tem certeza?'} do %>
          <i class="fa fa-minus"></i>
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
</div>