<% if user.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

    <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with(model: [:users_backoffice, @user], local: true, class: "form-horizontal form-label-left") do |form| %>

  <div class="form-group">
    <%= form.label :description, class: "control-label col-md-3 col-sm-3 col-xs-12" %>
    <div class="col-md-6 col-sm-6 col-xs-12">
      <%= form.text_field :description, class: "form-control col-md-7 col-xs-12" %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :ar, class: "control-label col-md-3 col-sm-3 col-xs-12" %>
    <div class="col-md-6 col-sm-6 col-xs-12">
      <%= form.text_field :ar, class: "form-control col-md-7 col-xs-12" %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :telephone, class: "control-label col-md-3 col-sm-3 col-xs-12" %>
    <div class="col-md-6 col-sm-6 col-xs-12">
      <%= form.text_field :telephone, class: "form-control col-md-7 col-xs-12" %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :email, class: "control-label col-md-3 col-sm-3 col-xs-12" %>
    <div class="col-md-6 col-sm-6 col-xs-12">
      <%= form.email_field :email, class: "form-control col-md-7 col-xs-12", autofocus: true, autocomplete: "email" %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :password, class: "control-label col-md-3 col-sm-3 col-xs-12" %>
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
    <div class="col-md-6 col-sm-6 col-xs-12">
      <%= form.password_field :password, class: "form-control col-md-7 col-xs-12", autocomplete: "new-password" %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :password_confirmation, class: "control-label col-md-3 col-sm-3 col-xs-12" %>
    <div class="col-md-6 col-sm-6 col-xs-12">
      <%= form.password_field :password_confirmation, class: "form-control col-md-7 col-xs-12", autocomplete: "new-password" %>
    </div>
  </div>

  <div class="ln_solid"></div>
  <div class="form-group">
    <div class="col-md-6 col-sm-6 offset-md-3">
      <button type="submit" class="btn btn-success">Submit</button>
    </div>
  </div>
<% end %>
